<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.sagutdinov.tribune">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="ru.sagutdinov.tribune.SettingsActivity"></activity>
        <activity android:name="ru.sagutdinov.tribune.AddPostActivity" />
        <activity android:name="ru.sagutdinov.tribune.RegistrationActivity" />
        <activity android:name="ru.sagutdinov.tribune.ReactionsActivity" />
        <activity android:name="ru.sagutdinov.tribune.UserActivity" />
        <activity android:name="ru.sagutdinov.tribune.PostActivity" />
        <activity android:name="ru.sagutdinov.tribune.MainActivity"
            android:windowSoftInputMode="stateVisible|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>